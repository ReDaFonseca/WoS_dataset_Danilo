@article{ WOS:000791538500016,
Author = {Goh, Hui Hwang and He, Ronghui and Zhang, Dongdong and Liu, Hui and Dai,
   Wei and Lim, Chee Shen and Kurniawan, Tonni Agustiono and Teo, Kenneth
   Tze Kin and Goh, Kai Chen},
Title = {A multimodal approach to chaotic renewable energy prediction using
