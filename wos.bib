@article{ WOS:000604506500001,
Author = {Yan, Hua and Wu, Zhengping},
Title = {A Hybrid Short-Term Wind Power Prediction Model Combining Data
   Processing, Multiple Parameters Optimization and Multi-Intelligent
   Models Apportion Strategy},
