@article{ WOS:000781774600001,
Author = {Salah, Saeed and Alsamamra, Husain R. and Shoqeir, Jawad H.},
Title = {Exploring Wind Speed for Energy Considerations in Eastern
   Jerusalem-Palestine Using Machine-Learning Algorithms},
